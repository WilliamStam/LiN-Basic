<h1>{{ article['heading'] }}</h1>
<section>
	<div>
		{{ article['category']['label'] }} - Date: {{ article['publishDate']['date_display_full'] }}
	</div>
	<div>
		Written by: {{ article['author']['name'] }} / Viewed: {{ article['viewed'] }}
	</div>
</section>
<hr>
<article>
	{% if article['thumbnail']['ID'] %}
	<div class="media-left pull-left c">
		<a href="/photo/files/{{ article['thumbnail']['ID'] }}/600/600/{{ article['thumbnail']['filename_orig'] }}" target='_blank' style='width:200px;' class='c image-modal'>
		<img class="" src="/thumbnail/files/{{ article['thumbnail']['ID'] }}/200/200/{{ article['thumbnail']['filename_orig'] }}" alt="..." style="background-color: #ccc;">
			</a>
		<div class="caption" style="max-width: 200px; padding: 5px 0 5px 0" >
			{{ article['thumbnail']['description']|raw() }}
		</div>
	
	</div>
	{% endif %}
	{{ article['article']|raw() }}
</article>
<div class="clearfix"></div>
<hr>
<section class="thumbnails" style='margin-top:20px;'>
	<div class="clearfix"></div>
	{% for row in article['photos'] %}
		{% if row['ID'] != article['thumbnail']['ID'] and row['description']=='' %}
			
					<a href="/photo/files/{{ row['ID'] }}/600/600/{{ row['filename_orig'] }}" class='media-left pull-left c image-modal' target='_blank' style='float:left; margin:10px;'>
						<img alt="" src="/thumbnail/files/{{ row['ID'] }}/150/150/{{ row['filename_orig'] }}" >
					</a>
				
				
		{% endif %}
	{% endfor %}
	<div class="clearfix"></div>
	
	<hr>
		{% for row in article['photos'] %}
			{% if row['ID'] != article['thumbnail']['ID'] and row['description']!='' %}
			<div style="margin-top:20px;">
				<div class="media-left pull-left">
					<a href="/photo/files/{{ row['ID'] }}/600/600/{{ row['filename_orig'] }}" target='_blank' style='width:200px;' class='c image-modal'>
				<img alt="" src="/thumbnail/files/{{ row['ID'] }}/150/150/{{ row['filename_orig'] }}">
					</a>
				</div>
	
				{{ row['description']|raw() }}
			</div>
			<div class="clearfix"></div>
			{% endif %}
		{% endfor %}
		
</section>

<div class="modal fade"  id="photo-viewer" tabindex="-1" role="dialog" aria-labelledby="photo-viewer">
	<div class="modal-dialog">
		<div class="modal-content">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close" style='position:absolute; top:5px; right:5px; z-index: 100; background-color: #fff; padding:10px;'><span aria-hidden="true">&times;</span></button>
			<div class="modal-body" style='padding:0;'>
				loading...
			</div>
			
		</div>
	</div>
</div>